{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {},
		"start": {},
		"e2e:ui": {},
		"e2e:run": {},
		"e2e:ci": {
			"dependsOn": ["^build"]
		},

		"test:ui": {
			"cache": false,
			"persistent": true
		},
		"test:run": {},
		"test": {},
		"panda": {},
		"codegen": {
			"cache": false
		},
		"tokens": {}
	},
	"globalEnv": [
		"ANALYZE",
		"CI",
		"VERCEL_ENV",
		"NODE_ENV",
		"GRAPHQL_ENDPOINT",
		"GRAPHQL_JWT_AUTH_SECRET_KEY",
		"GRAPHQL_API_AUTH_SECRET_KEY",
		"SITE_URL",
		"WP_DOMAIN",
		"HEADLESS_SECRET",
		"NEXT_PUBLIC_WORDPRESS_API_URL",
		"NEXT_PUBLIC_BASE_URL",
		"WP_USER",
		"WP_APP_PASS"
	],
	"ui": "stream"
}
